<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools">

    <ImageView android:layout_width="150dp"
               android:layout_height="150dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:background="@color/black"
               android:id="@+id/v1SuperHero"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/v1SuperHeroName"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/v1SuperHero"
              tools:text="Agucate book"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/v1RealName"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/v1SuperHeroName"
              app:layout_constraintStart_toEndOf="@+id/v1SuperHero"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/publisher"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/v1SuperHeroName"
              app:layout_constraintStart_toEndOf="@+id/v1RealName"/>
</androidx.constraintlayout.widget.ConstraintLayout>