<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context=".inAppUI.Favoritos"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/favorites_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="Favorites"
            android:textColor="#353940"
            android:textSize="30dp"

    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp">

        <Button
            android:id="@+id/book_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorites_text"
            android:backgroundTint="@color/white"
            android:ems="7"
            android:text="Book"
            android:textColor="@color/black" />
        <Button
                android:id="@+id/author_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/favorites_text"
                android:backgroundTint="#118A7E"
                android:ems="7"
                android:text="Author"
                android:textColor="@color/black"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="64dp" android:paddingStart="12dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:paddingStart="12dp" android:paddingRight="12dp"
                      android:id="@+id/favorites_list">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="12dp" android:id="@+id/favorites_item">
                <ImageView
                        android:src="@drawable/bookavo"
                        android:layout_width="50dp"
                        android:layout_height="50dp" android:id="@+id/author_book_img_item" android:layout_weight="0"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="0">
                    <TextView
                            android:text="Carl Sagan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/author_book_name_item"
                            android:textColor="@color/black" android:textStyle="bold"/>
                    <TextView
                            android:text="Astronomo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/author_book_extra_item"
                            android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>