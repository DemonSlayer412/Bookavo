<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="?attr/colorOnPrimary"
        tools:context=".Me">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/scroll_container" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@color/white"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/home_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/title_recomendation"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="44dp" android:layout_marginStart="16dp"
                    android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/daily_list"
                    app:layout_constraintVertical_bias="0.49" android:textSize="24sp" android:textStyle="bold"
                    android:textColor="@color/black_light"/>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:id="@+id/daily_list"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="12dp" android:layout_marginEnd="1dp"
                    android:layout_marginTop="5dp">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                              android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                            android:layout_width="240dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            android:layout_height="280dp">
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical"
                                      android:background="@drawable/rounded_style"
                                      android:backgroundTint="@color/black"
                                      android:padding="12sp"
                        >
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:layout_weight="1"
                                    android:background="@drawable/cosmos_book_image" android:backgroundTint="#99000000"
                                    android:backgroundTintMode="src_atop"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp" android:paddingLeft="5dp">
                                <TextView
                                        android:text="@string/home_book_1_category"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/category_3"
                                        android:layout_weight="0" android:paddingTop="5dp" android:paddingBottom="5dp"
                                        android:paddingLeft="5dp" android:paddingRight="5dp"
                                        android:background="#FF9800"/>
                                <TextView
                                        android:text="@string/home_book_1_name"
                                        android:layout_width="202dp"
                                        android:layout_height="wrap_content" android:id="@+id/book_name"
                                        android:layout_weight="0" android:textSize="20sp"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="18dp" android:layout_marginBottom="12dp"/>
                                <TextView
                                        android:text="@string/home_book_1_description"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/book_description_2"
                                        android:layout_weight="0" android:textSize="12sp"
                                        android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_width="240dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            android:layout_height="280dp">
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical"
                                      android:background="@drawable/rounded_style"
                                      android:backgroundTint="@color/black"
                                      android:padding="12sp"
                        >
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:layout_weight="1"
                                    android:background="@drawable/cosmos_book_image" android:backgroundTint="#99000000"
                                    android:backgroundTintMode="src_atop"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp" android:paddingLeft="5dp">
                                <TextView
                                        android:text="@string/home_book_1_category"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/category_4"
                                        android:layout_weight="0" android:paddingTop="5dp" android:paddingBottom="5dp"
                                        android:paddingLeft="5dp" android:paddingRight="5dp"
                                        android:background="#FF9800"/>
                                <TextView
                                        android:text="@string/home_book_1_name"
                                        android:layout_width="202dp"
                                        android:layout_height="wrap_content" android:id="@+id/book_name_2"
                                        android:layout_weight="0" android:textSize="20sp"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="18dp" android:layout_marginBottom="12dp"/>
                                <TextView
                                        android:text="@string/home_book_1_description"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/book_description"
                                        android:layout_weight="0" android:textSize="12sp"
                                        android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                    android:text="@string/home_book_1_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="13dp" app:layout_constraintTop_toBottomOf="@+id/daily_list"
                    android:layout_marginBottom="12dp" android:textColor="@color/black_light" android:textStyle="bold"
                    android:id="@+id/recent_title"/>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="264dp"
                    android:id="@+id/recientes" app:layout_constraintTop_toBottomOf="@+id/daily_list"
                    android:layout_marginBottom="2dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="12dp"
                    android:layout_marginEnd="1dp" tools:ignore="SpeakableTextPresentCheck"
            >
                <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                              android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="264sp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:background="@color/white"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:src="@drawable/cosmos_book_image"
                                    android:layout_width="130sp"
                                    android:background="@drawable/rounded_style"
                                    android:layout_height="184sp" android:id="@+id/imageView"/>
                            <TextView
                                    android:text="@string/home_book_1_recent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/recent_book_title"
                                    android:textStyle="bold" android:textSize="16sp" android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp" android:textColor="@color/black_light"/>
                            <TextView
                                    android:text="@string/home_book_1_author"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/recent_book_author"
                                    android:textSize="10sp" android:textColor="@color/black_light_sub"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                    android:text="@string/home_book_1_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/new_section_title"
                    android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="13dp" app:layout_constraintTop_toBottomOf="@+id/daily_list"
                    android:layout_marginBottom="10dp" android:textColor="@color/black_light" android:textStyle="bold"/>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/new_books" app:layout_constraintTop_toBottomOf="@+id/daily_list"
                    android:layout_marginBottom="2dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="12dp"
                    android:layout_marginEnd="1dp" tools:ignore="SpeakableTextPresentCheck"
            >
                <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                              android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="264sp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:background="@color/white"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:src="@drawable/cosmos_book_image"
                                    android:layout_width="130sp"
                                    android:layout_height="184sp" android:id="@+id/new_image"
                                    android:scaleType="centerCrop"/>
                            <TextView
                                    android:text="@string/home_book_1_recent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/new_title"
                                    android:textStyle="bold" android:textSize="16sp" android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp" android:textColor="@color/black_light"/>
                            <TextView
                                    android:text="@string/home_book_1_author"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/author_book_new"
                                    android:textSize="10sp" android:textColor="@color/black_light_sub"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                    android:text="@string/home_book_1_talvez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/recomendation_title"
                    android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="13dp" app:layout_constraintTop_toBottomOf="@+id/daily_list"
                    android:layout_marginBottom="5dp" android:textColor="@color/black_light" android:textStyle="bold"/>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/sugerencia"
                    tools:ignore="SpeakableTextPresentCheck" android:layout_marginStart="13sp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="vertical">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="8sp">
                        <ImageView
                                android:src="@drawable/cosmos_book_image"
                                android:layout_width="40sp"
                                android:layout_height="40sp" android:id="@+id/image_sugerencia_3"
                                android:adjustViewBounds="true" android:scaleType="centerCrop"/>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_marginStart="10sp">
                            <TextView
                                    android:text="@string/home_book_1_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/book_name_sugerencia"
                                    android:textColor="@color/black_light"/>
                            <TextView
                                    android:text="@string/home_book_1_author"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/book_sugerencia_author"
                                    android:textColor="@color/black_light_sub"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="8sp">
                        <ImageView
                                android:src="@drawable/cosmos_book_image"
                                android:layout_width="40sp"
                                android:layout_height="40sp" android:id="@+id/image_sugerencia_4"
                                android:background="@drawable/rounded_style"
                                android:adjustViewBounds="true" android:fitsSystemWindows="false"
                                android:scaleType="centerCrop"/>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_marginStart="10sp">
                            <TextView
                                    android:text="@string/home_book_1_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/book_name_sugerencia_2"
                                    android:textColor="@color/black_light"/>
                            <TextView
                                    android:text="@string/home_book_1_author"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/book_sugerencia_author_2"
                                    android:textColor="@color/black_light_sub"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>